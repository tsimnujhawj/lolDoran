<div class="champ-header">
    <h1>{{champName}}</h1>
    <div class="champ-img">
        {{{champImg}}}
    </div>
</div>

<div class="popItems">
    <ul>
    {{#each itemName}}
        <li>
        <h5>{{this.name}}</h5>
        <h6>Popularity: {{this.pop}}</h6>
        <img class="item" alt="{{this.name}}" src="{{this.url}}"/>
        </li>
    {{/each}}
    </ul>
</div>

<div class="form-group comment-box">
<form action="/post" method="POST">
<select name="champion" class="select-hidden">
  <option value="{{champName}}"></option>
</select>
  <label for="comment" class="comment-title"><h3>Comment</h3></label>
    <input type="text" class="form-control" id="poster" placeholder="Enter Your Name" name="name">
  <textarea class="form-control" id="comment" name="post"></textarea>
  <button type="submit" class="btn btn-success col-4">Submit</button>
</form>
</div>

<div class="forum">
    {{forum}}
</div>